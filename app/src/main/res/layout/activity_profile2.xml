<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/second_relative_layout"
    >

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar1" />


    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/border"
        android:src="@drawable/eprofile"
        android:layout_below="@id/toolbar1"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_bias="5"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        />


    <TextView
        android:id="@+id/Profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dati"
        android:textSize="24sp"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"

        />

    <TextView
        android:id="@+id/user_nome"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/Profile_text"
        android:background="@drawable/custom_button_v3"
        android:drawableLeft="@drawable/ic_profile2"
        android:ems="20"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/user_cognome"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_nome"
        android:background="@drawable/custom_button_v3"
        android:drawableLeft="@drawable/ic_profile2"
        android:ems="20"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_cognome"
        android:background="@drawable/custom_button_v3"
        android:drawableLeft="@drawable/i_baseline_email_black_24"
        android:ems="20"
        android:padding="20dp"
        android:paddingTop="13dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/edit_button"
        android:layout_width="31dp"
        android:layout_height="31dp"

        android:layout_alignTop="@id/profile_image"

        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/profile_image"
        android:background="@drawable/custom_edit_button_black"
        android:textColor="@color/blu" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/profile_image"
        android:orientation="vertical" />


</RelativeLayout>
