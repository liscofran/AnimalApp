<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_animal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/second_relative_layout"
        >


        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/animal_sesso"
            android:layout_marginTop="-577dp"
            android:background="@drawable/custom_button_v3"
            android:src="@drawable/ic_share" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/border"
            android:src="@drawable/leone"
            android:layout_marginTop="100dp"
            app:layout_constraintVertical_bias="5"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/Profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dati Animale"
            android:textSize="24sp"
            android:layout_below="@id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/animal_proprietario"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/Profile_text"
            android:background="@drawable/custom_button_v3"
            android:drawableLeft="@drawable/ic_profile2"
            android:ems="20"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="ID padrone"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/animal_nome"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/animal_proprietario"
            android:background="@drawable/custom_button_v3"
            android:drawableLeft="@drawable/ic_baseline_pets_24_black"
            android:ems="20"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Inserisci il Nome"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/animal_razza"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/animal_nome"
            android:background="@drawable/custom_button_v3"
            android:drawableLeft="@drawable/ic_baseline_pets_24_black"
            android:ems="20"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="20dp"
            android:hint="Inserisci la razza"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/animal_sesso"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/animal_razza"
            android:background="@drawable/custom_button_v3"
            android:drawableLeft="@drawable/ic_baseline_star_rate_24"
            android:ems="20"
            android:padding="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="20dp"
            android:hint=" Inserisci il sesso"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/edit_button"
            android:layout_width="31dp"
            android:layout_height="31dp"

            android:layout_alignBottom="@id/profile_image"

            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/profile_image"
            android:background="@drawable/custom_edit_button_black"
            android:textColor="@color/blu" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/profile_image"
            android:orientation="vertical" />


    </RelativeLayout>


</FrameLayout>