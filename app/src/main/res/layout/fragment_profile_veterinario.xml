<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_profile_veterinario">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/second_relative_layout"
        >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/border"
            android:src="@drawable/veterinarioimage"
            android:layout_marginTop="100dp"
            app:layout_constraintVertical_bias="5"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/Profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dati Veterinario"
            android:textSize="24sp"
            android:layout_below="@id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/vet_nome"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/Profile_text"
            android:background="@drawable/custom_button_v3"
            android:drawableLeft="@drawable/ic_profile2"
            android:ems="20"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Campo Nome da compilare"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/vet_cognome"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/vet_nome"
            android:background="@drawable/custom_button_v3"
            android:drawableLeft="@drawable/ic_profile2"
            android:ems="20"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="5dp"
            android:hint="Campo Cognome da compilare"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/vet_codicefiscale"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/vet_cognome"
            android:background="@drawable/custom_button_v3"
            android:drawableLeft="@drawable/id_card"
            android:ems="20"
            android:padding="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="5dp"
            android:hint=" Campo Codice fiscale da compilare"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/vet_email"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/vet_codicefiscale"
            android:background="@drawable/custom_button_v3"
            android:drawableLeft="@drawable/i_baseline_email_black_24"
            android:ems="20"
            android:padding="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="5dp"
            android:hint=" Campo email da compilare"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/vet_titolostudio"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/vet_email"
            android:background="@drawable/custom_button_v3"
            android:drawableLeft="?attr/actionModePasteDrawable"
            android:ems="20"
            android:padding="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="5dp"
            android:hint=" Campo titolo di studio da compilare"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/edit_button"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_alignBottom="@id/profile_image"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/profile_image"
            android:background="@drawable/custom_edit_button_black"
            android:textColor="@color/blu" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/profile_image"
            android:orientation="vertical" />
    </RelativeLayout>


</FrameLayout>