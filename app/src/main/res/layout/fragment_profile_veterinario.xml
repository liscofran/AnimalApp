<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_profile_veterinario">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/second_relative_layout">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:background="@drawable/custom_button_v3"
            android:src="@drawable/veterinarioimage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Profile_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/Profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dati"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintBottom_toTopOf="@id/vet_nome"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <EditText
            android:id="@+id/vet_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_v2"
            android:drawablePadding="10dp"
            app:drawableLeftCompat="@drawable/ic_profile2"
            android:hint="Inserisci Nome.."
            app:layout_constraintTop_toBottomOf="@id/Profile_text"
            app:layout_constraintBottom_toTopOf="@id/vet_cognome"
            app:layout_constraintLeft_toLeftOf="@id/guideline5"
            app:layout_constraintRight_toRightOf="@id/guideline4"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <EditText
            android:id="@+id/vet_cognome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_v2"
            android:drawableLeft="@drawable/ic_profile2"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:hint="Inserisci Cognome.."
            app:layout_constraintStart_toStartOf="@id/vet_nome"
            app:layout_constraintEnd_toEndOf="@+id/vet_nome"
            app:layout_constraintTop_toBottomOf="@id/vet_nome"
            app:layout_constraintBottom_toTopOf="@id/vet_codicefiscale"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <EditText
            android:id="@+id/vet_codicefiscale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_v2"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:hint="Inserisci Codice Fiscale"
            app:layout_constraintTop_toBottomOf="@id/vet_cognome"
            app:layout_constraintBottom_toTopOf="@id/vet_email"
            app:layout_constraintStart_toStartOf="@id/vet_nome"
            app:layout_constraintEnd_toEndOf="@+id/vet_nome"
            app:drawableLeftCompat="@drawable/id_card"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <EditText
            android:id="@+id/vet_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_v2"
            android:drawableLeft="@drawable/i_baseline_email_black_24"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:hint="Inserisci Email"
            app:layout_constraintTop_toBottomOf="@id/vet_codicefiscale"
            app:layout_constraintBottom_toTopOf="@id/vet_titolostudio"
            app:layout_constraintStart_toStartOf="@id/vet_nome"
            app:layout_constraintEnd_toEndOf="@+id/vet_nome"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/vet_titolostudio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_v2"
            app:drawableLeftCompat="?attr/actionModePasteDrawable"
            android:drawablePadding="10dp"
            android:hint="Inserisci Titolo di studio"
            app:layout_constraintTop_toBottomOf="@id/vet_email"
            app:layout_constraintBottom_toTopOf="@id/edit_button"
            app:layout_constraintStart_toStartOf="@id/vet_nome"
            app:layout_constraintEnd_toEndOf="@+id/vet_nome"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />


        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifica"
            app:layout_constraintTop_toBottomOf="@id/vet_titolostudio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline5"
            app:layout_constraintRight_toRightOf="@id/guideline4"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>