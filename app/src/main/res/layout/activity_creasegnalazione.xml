<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_button">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/segnalazione"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6D233555"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="@android:color/transparent"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/categoria"/>

    <TextView
        android:id="@+id/segnalazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="Crea Segnalazione"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar1"
        app:layout_constraintBottom_toTopOf="@+id/categoria"/>

    <TextView
        android:id="@+id/categoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Categoria"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:background="@drawable/textview_border"
        app:layout_constraintTop_toBottomOf="@id/segnalazione"
        app:layout_constraintBottom_toTopOf="@id/spinner1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@+id/categoria"
        app:layout_constraintBottom_toTopOf="@+id/oggetto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/oggetto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Oggetto"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:background="@drawable/textview_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/provincia"
        app:layout_constraintTop_toBottomOf="@id/spinner1"
        app:layout_constraintBottom_toTopOf="@id/spinner3"/>

    <TextView
        android:id="@+id/provincia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Provincia"
        android:textStyle="bold"
        android:padding="20dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/textview_border"
        app:layout_constraintTop_toBottomOf="@id/spinner1"
        app:layout_constraintLeft_toRightOf="@id/oggetto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spinner2"/>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@+id/provincia"
        app:layout_constraintStart_toEndOf="@id/oggetto"
        app:layout_constraintEnd_toEndOf="@id/provincia"
        app:layout_constraintBottom_toTopOf="@+id/descrizione"/>

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@+id/oggetto"
        app:layout_constraintStart_toStartOf="@id/oggetto"
        app:layout_constraintEnd_toEndOf="@id/oggetto"
        app:layout_constraintBottom_toTopOf="@+id/descrizione"/>

    <EditText
        android:id="@+id/descrizione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_v2"
        android:drawableLeft="@drawable/ic_plus"
        android:drawablePadding="10dp"
        android:hint="Inserisci Descrizione.."
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner2"
        app:layout_constraintBottom_toTopOf="@id/text_view_description"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A chi deve essere visibile:"
        android:textSize="17dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:background="@drawable/textview_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descrizione"
        app:layout_constraintBottom_toTopOf="@+id/check_box1"/>

    <CheckBox
        android:id="@+id/check_box1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opzione 1"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_description"
        app:layout_constraintBottom_toTopOf="@+id/check_box2"/>

    <CheckBox
        android:id="@+id/check_box2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opzione 2"
        app:layout_constraintStart_toStartOf="@+id/check_box1"
        app:layout_constraintEnd_toEndOf="@id/check_box1"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/check_box1"
        app:layout_constraintBottom_toTopOf="@+id/check_box3"/>

    <CheckBox
        android:id="@+id/check_box3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opzione 3"
        app:layout_constraintStart_toStartOf="@+id/check_box2"
        app:layout_constraintEnd_toEndOf="@+id/check_box2"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/check_box2"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>