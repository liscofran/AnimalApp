<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_animal_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/register_animal_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/register_animal_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:background="@android:color/transparent"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar1"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/register_animal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Registrazione Animale"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_animal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Nome"
                android:inputType="text"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/register_animal_species"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Razza"
                android:inputType="text" />

            <TextView
                android:id="@+id/register_animal_sex_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sesso"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/register_animal_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/register_animal_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maschio" />

                <RadioButton
                    android:id="@+id/register_animal_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Femmina" />

            </RadioGroup>

            <EditText
                android:id="@+id/register_animal_birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Data di Nascita (AAAA-MM-GG)"
                android:inputType="date"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/button_choose_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scegli immagine" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_above="@id/progress_bar"
                android:layout_marginLeft="170dp"
                 />


            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button_choose_image"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/register_animal_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registra" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
