<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Fragment_Immagine">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/costraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/AggiungiImmagini"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Aggiungi Immagini"
            app:layout_constraintBottom_toTopOf="@id/VisualizzaImmagine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/VisualizzaImmagine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Visualizza Immagini"
            app:layout_constraintBottom_toTopOf="@id/NomeImmagine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/NomeImmagine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Inserire il nome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/VisualizzaImmagine" />

        <ImageButton
            android:id="@+id/DownloadImmagini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/download"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/NomeImmagine" />

        <ImageButton
            android:id="@+id/UploadImmagini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/upload"
            app:layout_constraintLeft_toRightOf="@id/DownloadImmagini"
            app:layout_constraintTop_toBottomOf="@id/NomeImmagine" />

        <ImageView
            android:id="@+id/Immagine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/NomeImmagine" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>