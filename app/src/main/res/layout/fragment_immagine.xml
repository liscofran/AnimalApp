<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Fragment_Immagine">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/costraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/NomeTesto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Inserire il nome dell'Immagine"
            app:layout_constraintBottom_toTopOf="@id/VisualizzaTesti"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/AggiungiTesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/Profile"
            android:padding="5dp"
            android:src="@drawable/upload"
            app:layout_constraintBottom_toTopOf="@id/VisualizzaTesti"
            app:layout_constraintStart_toEndOf="@id/NomeTesto" />

        <Button
            android:id="@+id/VisualizzaTesti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualizza Immagini"
            app:layout_constraintTop_toBottomOf="@id/AggiungiTesto"
            app:layout_constraintStart_toStartOf="@id/NomeTesto"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>