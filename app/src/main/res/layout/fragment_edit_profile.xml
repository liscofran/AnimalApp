<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_profile">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/second_relative_layout">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="@android:color/transparent"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintVertical_bias="0.01"/>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:background="@drawable/custom_button_v2"
            android:src="@drawable/eprofile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Profile_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/Profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifica Dati"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintBottom_toTopOf="@id/user_nome"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/user_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_v2"
            android:drawablePadding="10dp"
            app:drawableLeftCompat="@drawable/ic_profile2"
            android:hint="Inserisci Nome.."
            app:layout_constraintTop_toBottomOf="@id/Profile_text"
            app:layout_constraintBottom_toTopOf="@id/user_cognome"
            app:layout_constraintLeft_toLeftOf="@id/guideline5"
            app:layout_constraintRight_toRightOf="@id/guideline4"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/user_cognome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_v2"
            app:drawableLeftCompat="@drawable/ic_profile2"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:hint="Inserisci Cognome.."
            app:layout_constraintStart_toStartOf="@id/user_nome"
            app:layout_constraintEnd_toEndOf="@+id/user_nome"
            app:layout_constraintTop_toBottomOf="@id/user_nome"
            app:layout_constraintBottom_toTopOf="@id/user_codicefiscale"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/user_codicefiscale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_v2"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:hint="Inserisci Codice Fiscale"
            app:layout_constraintTop_toBottomOf="@id/user_cognome"
            app:layout_constraintBottom_toTopOf="@id/save_profile_button"
            app:layout_constraintStart_toStartOf="@id/user_nome"
            app:layout_constraintEnd_toEndOf="@+id/user_nome"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:drawableLeftCompat="@drawable/ic_profile2" />

        <Button
            android:id="@+id/save_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salva"
            android:background="@drawable/custom_button_v2"
            app:layout_constraintTop_toBottomOf="@id/user_codicefiscale"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline5"
            app:layout_constraintRight_toRightOf="@id/guideline4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>