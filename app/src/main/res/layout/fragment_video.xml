<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Fragment_Video">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/costraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        <Button-->
<!--            android:id="@+id/AggiungiVideo"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Aggiungi Video"-->
<!--            app:layout_constraintBottom_toTopOf="@id/VisualizzaVideo"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent" />-->

        <EditText
            android:id="@+id/NomeVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Inserire il nome del Video"
            app:layout_constraintBottom_toTopOf="@id/VisualizzaTesti"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/AggiungiTesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/Profile"
            android:padding="5dp"
            android:src="@drawable/upload"
            app:layout_constraintBottom_toTopOf="@id/VisualizzaTesti"
            app:layout_constraintStart_toEndOf="@id/NomeVideo" />

        <Button
            android:id="@+id/VisualizzaTesti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualizza Video"
            app:layout_constraintTop_toBottomOf="@id/AggiungiTesto"
            app:layout_constraintStart_toStartOf="@id/NomeVideo"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>