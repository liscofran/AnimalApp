<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Fragment_Testo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/costraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/Testo"
        app:layout_constraintTop_toBottomOf="@+id/Testo">

        <Button
            android:id="@+id/InserisciTesti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Inserisci il testo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/VisualizzaTesti" />

        <Button
            android:id="@+id/VisualizzaTesti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Visualizza Testi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/TitoloTesti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:hint="Inserire il nome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Testo" />

        <ImageButton
            android:id="@+id/DownloadTesti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/download"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/InserisciTesti" />

        <ImageButton
            android:id="@+id/UploadTesti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/upload"
            app:layout_constraintStart_toEndOf="@+id/DownloadTesti"
            app:layout_constraintTop_toTopOf="@+id/DownloadTesti" />

        <EditText
            android:id="@+id/Testo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Inserire il testo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UploadTesti" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>